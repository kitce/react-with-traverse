{
  "rules": {
    "arrow-parens": [
      "error",
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "func-names": [
      "warn",
      "never"
    ],
    "generator-star-spacing": [
      "error",
      {
        "before": true,
        "after": false
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true
      }
    ],
    "import/no-named-as-default-member": [
      "off"
    ],
    "import/prefer-default-export": [
      "off"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1,
        "MemberExpression": "off"
      }
    ],
    "jsx-a11y/anchor-is-valid": [
      "warn",
      {
        "components": []
      }
    ],
    "key-spacing": [
      "warn",
      {
        "beforeColon": true
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": true
      }
    ],
    "no-shadow": [
      "off"
    ],
    "no-underscore-dangle": [
      "off"
    ],
    "no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": "debug"
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "object-curly-newline": [
      "off",
      {
        "minProperties": 3
      }
    ],
    "object-curly-spacing": [
      "warn",
      "never"
    ],
    "one-var": [
      "off",
      "consecutive"
    ],
    "one-var-declaration-per-line": [
      "warn",
      "initializations"
    ],
    "prefer-destructuring": [
      "warn",
      {
        "VariableDeclarator": {
          "array": false,
          "object": true
        },
        "AssignmentExpression": {
          "array": false,
          "object": false
        }
      }
    ],
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-tag-spacing": [
      "warn",
      {
        "beforeSelfClosing": "never"
      }
    ],
    "react/prop-types": [
      "off",
      {
        "ignore": [
          "dispatch",
          "styles",
          "theme",
          "t"
        ]
      }
    ],
    "strict": [
      "off"
    ],
    "space-before-function-paren": [
      "error",
      "always"
    ],
    "switch-colon-spacing": [
      "warn",
      {
        "before": true
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:react/recommended"
  ]
}
